case $- in
    *i*) ;;
      *) return;;
esac

case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

build_profile=$([[ "$BASH_VERSION" == *-release ]] || echo "(${BASH_VERSION##*-})")
if [ "$color_prompt" = yes ]; then
	PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;36m\]\b\[\033[00m\]\[\033[01;35m\]\w\[\033[00m\]'$build_profile'ðŸ£ '
else
	PS1='\u@\h:\w'$build_profile'ðŸ£ '
fi 


case "$TERM" in
xterm*|rxvt*)
    PS1="\[\033]2;\u@\h: \w\007\]$PS1"
    ;;
*)
    ;;
esac


PS2='> '
PS4='+ '
alias ll='ls -l'
alias git-writing='git add -A ; git commit -m Writing ; git push'


